<Window x:Class="UNO_Game.GameOverPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNO_Game"
        mc:Ignorable="d"
        Title="GameOverPopup" Height="250" Width="500" AllowsTransparency="True" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <Border CornerRadius="30" Background="Gray">
            <Grid>
                <StackPanel Margin="30">
                    <TextBlock x:Name="WinLosetb" HorizontalAlignment="Center" FontSize="50" Text="You Won! " FontWeight="ExtraBold"/>
                    <StackPanel Orientation="Vertical" Margin="50">
                       
                    </StackPanel>

                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="40,20">
                    <Button x:Name="PlayAgainbtn" BorderThickness="4" Content="Play Again" FontWeight="Medium" FontSize="20" Width="175" Height="37" VerticalContentAlignment="Center" Click="PlayAgainbtn_OnClick">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                               
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="BackToMenubtn" BorderThickness="4" FontWeight="Medium" Content="Back To Menu" FontSize="20" Width="175" Height="37" VerticalContentAlignment="Center" Margin="70,0" Click="BackToMenubtn_OnClick">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
