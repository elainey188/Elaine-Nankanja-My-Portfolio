<Window x:Class="UNO_Game.NamePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNO_Game"
        mc:Ignorable="d"
        Title="NamePopup" Height="120" Width="300" WindowStartupLocation="CenterOwner" WindowStyle="None" Background="#FFEEEEEE">
    <Grid>
        <StackPanel>
            <Label Content="Please enter in your new name" FontSize="16"/>
            <Border BorderThickness="1" BorderBrush="DarkGray" Width="275">
                <TextBox TextWrapping="Wrap" Width="275" x:Name="Username" Height="38" FontSize="24" Background="White"/>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SubmitButton"  BorderThickness="2" FontWeight="Medium" Width="130" Margin="15,10,0,10" Content="Submit" FontSize="16" Padding="2" Click="SubmitButton_Click"/>
                <Button x:Name="CancelButton" BorderThickness="2" FontWeight="Medium" Width="130" Margin="5,10,0,10" Content="Cancel" FontSize="16" Padding="2" Click="CancelButton_Click"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
